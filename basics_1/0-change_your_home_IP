#!/bin/bash

# Must be run as root
if [[ $EUID -ne 0 ]]; then
  echo "Please run as root (use sudo)" >&2
  exit 1
fi

# Backup /etc/hosts if not already backed up
[ ! -f /etc/hosts.bak ] && cp /etc/hosts /etc/hosts.bak

# Remove existing localhost and facebook.com entries
sed -i '/\s\+localhost/d' /etc/hosts
sed -i '/facebook.com/d' /etc/hosts

# Add new required entries
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts

